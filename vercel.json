{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "includeFiles": [
        "services/**",
        "schemas/**",
        "routers/**",
        "middlewares/**",
        "utils/**",
        "db/**",
        "exceptions.py",
        "main.py"
      ]
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ]
}