{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@6.0.2",
      "config": {
        "includeFiles": [
          "services/**",
          "schemas/**",
          "routers/**",
          "middlewares/**",
          "utils/**",
          "db/**",
          "exceptions.py",
          "main.py"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}